<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.budgetapp.budgetapp.PaymentsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">

        <LinearLayout
            android:id="@+id/paymentsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="18">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Payment Type"
                    android:textSize="@dimen/display_font_size"
                    android:textColor="#000000"
                    android:padding="@dimen/display_font_padding"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Current Balance ($)"
                    android:textSize="@dimen/display_font_size"
                    android:textColor="#000000"
                    android:padding="@dimen/display_font_padding"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/paymentEntry"
            android:text="New payment type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:textSize="24dp"/>
        <Button
            android:id="@+id/paymentDeposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make a deposit"
            android:padding="24dp"
            android:textSize="24dp"/>

    </LinearLayout>

</RelativeLayout>
